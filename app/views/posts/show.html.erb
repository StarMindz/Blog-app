<p style="color: green"><%= notice %></p>

<div>
  <div>
    <div>
      <span><%=@post.title%> by <%=@user.name%></span>
      <p>Number of comments: <%=@post.comments_counter%> Number of likes: <%=@post.likes_counter%></p>
    </div>
    <p><%=@post.text%></p>
  </div>
  <div>
    <%@post.comments.each do |comment|%>
          <p><%=comment.text%></p>
    <% end %>
  </div>
</div>
